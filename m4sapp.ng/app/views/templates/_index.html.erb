<div id="home">
	<div class="greeting">
		<h2>Welcome <spon>Zombie</spon></h2>
		Share your near fosts and see what's sharing others.
		<hr>
	</div>
</div>


<div class="wrapper">

	<div id="query">
		<input type="text" class="form-control" placeholder="Search..." ng-model="query" />
	</div>

	<div id="fosts">
		<div class="fost" ng-repeat="fost in fosts | filter:query">
			<figure>
				<img ng-src="./image.png">
			</figure>
			<div class="fost_content">
				<div class="title">
					<h2>{{fost.name}}</h2>
				</div>
				<div class="data clearfix">
					<p class="username">
						Shared by Zombie
					</p>
					<p class="buttons">
						<span><i class="fa.fa-comments-o">Comments</i></span>
						<span><i class="fa.fa-thumbs-o-up">Likes</i></span>
					</p>
				</div> <!-- data -->
			</div>
		</div>
	</div>
</div>
